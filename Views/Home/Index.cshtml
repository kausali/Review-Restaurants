<h1>Write a new Review:</h1><br>

<div id="container">
    <form action="/process" method="POST">
        <label for="name">Reviewer Name:</label>
        <input type="text" id = "name" name="name"><br>
        <label for="rest_name">Restaurant Name:</label>
        <input type="text" id = "rest_name" name="rest_name"><br>
        <label for="review">Review:</label><br>
        <textarea name="review" id = "review" cols="26" rows="7"></textarea><br>
        <label for="date">Date of Visit:</label><br>
        <input type="date" id = "date" name="date"><br>
        Stars: <select name="stars">
        <option selected disabled>--</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <input type="submit"id ="submit"value="Submit"><br><br>
    </select>
    </form>
</div>
<div id="star">
  
@{
    foreach(var e in ViewBag.errors){
        if(@e.Errors.Count > 0){
            <p>@e.Errors[0].ErrorMessage</p>
        }
    }
}
</div>